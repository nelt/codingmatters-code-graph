                <sourcefiles>
                    <fileset dir="./codingmatters-code-graph-ui/codingmatters-code-graph-ui-service-api/src/main/java/"/>
                </sourcefiles>
            </group>
        </structure>

        <html destdir="target/report"/>
        
    </jacoco:report>

</project>
